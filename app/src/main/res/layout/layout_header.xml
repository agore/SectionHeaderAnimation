<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:background="@drawable/test"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:background="#d6731789" />

    <TextView
        android:id="@+id/txt_header_line1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="32sp"
        android:textColor="#FFFFFF"
        android:layout_marginTop="96dp"
        android:gravity="center"
        android:text="SECTION"/>

    <TextView
        android:id="@+id/txt_header_line2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="#FFFFFF"
        android:maxLines="2"
        android:gravity="center"
        android:layout_marginTop="8dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:layout_below="@+id/txt_header_line1"
        android:text="This is a fairly long blurb that can possibly span two lines"/>
</RelativeLayout>